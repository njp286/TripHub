<div class='row'>


<form action="/deleteTrip/{{trip.slug}}" method="post">
  <button name='{{trip.name}}' type="submit">Delete Trip</button>
</form>

<form action="/update/{{trip.slug}}" method="post">
  <button type="submit">Home</button>



<h2 id='titleSide'>TRIPHUB</h2> <h1 id='trip'>{{trip.name}}</h1>
</div>
<div class='row'>
  <div class='col-md-3'></div>
  <div class='col-md-6'>

    <h3> Departing Flight </h3>
    <h4> {{departFlight.flightNum}} </h4>
    <h4> {{departFlight.date}}</h4>
    <h4> Terminal {{departFlight.terminal}} </h4>
    <h3> Hotel Info </h3>
    <h4> {{hotel.name}} </h4>
    <h4> {{hotel.address}} </h4>
    <h4> Check In: {{hotel.chInDate}} </h4>
    <h4> Check Out: {{hotel.chOutDate}} </h4>
    <h3> Return Flight </h3>
    <h4> {{returnFlight.flightNum}}</h4>
    <h4> {{returnFlight.date}}</h4>
    <h4> Terminal {{returnFlight.terminal}}</h4>

    <h3> TO DO LIST </h3>

    {{#each toDoList}}
    {{#if this.completed}}
    	<input id='{{{this.slug}}}' type='checkbox' name='checkedToDo' value='{{{this.slug}}}' checked='{{{this.completed}}}'>{{{this.name}}}<br>
    {{else}}
    	<input id='{{{this.slug}}}' type='checkbox' name='checkedToDo' value='{{{this.slug}}}'>{{{this.name}}}<br>
    {{/if}}


    {{/each}}

    </form>

    <form action="/add/{{trip.slug}}" method="post">
    	To do: <input type="text" name="toDo"> <button type="submit">Submit</button>
    </form>

    <div id="slideshow">
       <div>
         <img src="//farm6.static.flickr.com/5224/5658667829_2bb7d42a9c_m.jpg">
       </div>
       <div>
         <img src="//farm6.static.flickr.com/5230/5638093881_a791e4f819_m.jpg">
       </div>
    </div>
  </div>
  <div class='col-md-3'></div>
</div>

